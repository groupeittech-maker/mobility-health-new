# Database
# Pour le développement : SQLite (par défaut)
DATABASE_URL=sqlite:///./mobility_health.db

# Pour la production : PostgreSQL (décommenter quand nécessaire)
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_DB=mobility_health
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mobility_health

# Redis
REDIS_URL=redis://localhost:6379/0

# Minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# JWT
SECRET_KEY=your-secret-key-change-in-production-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
DEBUG=True
ENVIRONMENT=development

# CORS: Liste des origines autorisées (séparées par des virgules)
# En production, l'origine du frontend doit être autorisée (ex: https://srv1324425.hstgr.cloud)
# Exemple: CORS_ORIGINS=https://srv1324425.hstgr.cloud,http://localhost:3000,http://192.168.1.183:8000
# CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080,http://localhost:8000,http://127.0.0.1:8000,http://10.0.2.2:8000,http://192.168.1.183:8000

# Assurance / Attestation
ASSURANCE_NAME=Mobility Health Assurance
ASSURANCE_ADDRESS=Plateau, Abidjan, Cote d'Ivoire
ASSURANCE_PHONE=+22500000000
ASSURANCE_EMAIL=support@mobilityhealth.com
ASSURANCE_AGENT_NAME=Equipe Mobility Health
ASSURANCE_AGENT_TITLE=Representant habilite
ASSURANCE_CITY=Abidjan

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@mobilityhealth.com
SMTP_FROM_NAME=Mobility Health

# SMS (Twilio - optionnel)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Push Notifications (FCM - optionnel)
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-project-id

